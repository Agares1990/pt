{% extends "baseBO.html.twig" %}
{% block contenu %}

{% if updateCat == 1 %}
  <section>
    <h2>Modifier cette Catégorie</h2>
    <p id="ErrorJS"></p>
    <form id="updateRoomCategory" action="manageRoomCategory.php" method="post">
      <input type="hidden" name="idCategorieChambre" value="{{getCategoryInfo.idCategorieChambre}}">
      <label for="tarifCategorieChambre">Veuillez entrer le tarif la chambre svp</label>
      <input type="text" id="tarifCategorieChambre" name="tarifCategorieChambre" value="{{getCategoryInfo.tarifCategorieChambre}}">
      <label for="image">Veuillez entrer le lien de l'image de la chambre svp</label>
      <input type="text" id="image" name="image" value="{{getCategoryInfo.image1}}">
      <input type="submit" name="updateRoomCategory" value="Valider">
    </form>
  </section>
{% endif %}
<section>
  <p>{{succesMessageAddUpdateRoom}}</p>
  <p>{{failedMessageAddUpdateRoom}}</p>
  <h2>Gérer les <span>catégories de chambre</span></h2>
  <table>
    <thead>
        <tr>
            <th>Identifiant Catégorie</th>
            <th>Nom Catégorie</th>
            <th>Image</th>
            <th>Tarif</th>
            <th>Modifier</th>
        </tr>
    </thead>
    <tbody>
        {% for getCategory in getCategories %}

            <tr>
                <td>{{getCategory.idCategorieChambre}}</td>
                <td>{{getCategory.nomCategorie}}</td>
                <td>{{getCategory.image1}}</td>
                <td>{{getCategory.tarifCategorieChambre}}</td>
                <td>
                  <form class="" action="manageRoomCategory.php" method="post">
                    <input type="hidden" name="idCategorieChambre" value="{{getCategory.idCategorieChambre}}">
                    <input type="hidden" name="updateCat">
                    <input type="submit" name="update" value="Modifier">
                  </form>
                </td>
            </tr>

        {% endfor %}
    </tbody>
  </table>
</section>


{% endblock %}
